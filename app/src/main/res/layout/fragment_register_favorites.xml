<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ButtonExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기" />

        <Button
            android:id="@+id/ButtonShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="저장" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TextViewSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextViewSubject"
            android:id="@+id/EditTextSubject"
            android:hint="Ex) 네이버"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TextViewURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL"
            android:textSize="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextViewURL"
            android:id="@+id/EditTextURL"
            android:hint="Ex) http://www.naver.com"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TextViewRegisterDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록일자"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextViewRegisterDate"
            android:text="등록일자"
            android:id="@+id/ButtonRegisterDate"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</LinearLayout>